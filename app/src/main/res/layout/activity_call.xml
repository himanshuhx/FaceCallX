<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallActivity">

    <ImageView
        android:id="@+id/profile_image_call"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image">

    </ImageView>

    <TextView
        android:id="@+id/name_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="username"
        android:gravity="center"
        android:textSize="35dp"
        android:layout_above="@+id/txt"
        android:layout_marginBottom="20dp">

    </TextView>

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calling..."
        android:gravity="center"
        android:textSize="35dp"
        android:layout_marginBottom="20dp"
        android:textColor="#89DD59"
        android:textStyle="bold"
        android:layout_above="@+id/linear_layout1">

    </TextView>

    <LinearLayout
        android:id="@+id/linear_layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/make_call"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/make_call"
            android:layout_marginRight="80dp"
            android:visibility="gone">

        </ImageView>

        <ImageView
            android:id="@+id/cancel_call"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cancel_call">

        </ImageView>

    </LinearLayout>
</RelativeLayout>